<%- include('../layout/header') %>
<body>
  <h1>Payme integration</h1>
  <p>Merchant API <%= version %></p>

  <h2>Transactions</h2>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Num</th>
      <th>Amount</th>
      <th>State</th>
      <th>Perform time</th>
      <th>Reason</th>
    </tr>
    </thead>
    <tbody>
    <% transactions.forEach(function(transaction) { %>
      <tr>
        <td>
          <a href="/transaction/<%= transaction.id %>"><%- transaction.id %></a>
        </td>
        <td><%- transaction.amount %></td>
        <td><%- transaction.state %> <span class="badge bg-secondary"><%- TransactionStateName[transaction.state] %></span></td>
        <td><%- transaction.perform_time %></td>
        <td><%- transaction.reason %> <span class="badge bg-danger"><%- TransactionCancelReasonName[transaction.reason] %></span></td>
      </tr>
    <% }); %>
    </tbody>
  </table>
</body>
<%- include('../layout/footer') %>
